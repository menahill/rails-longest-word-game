<%# form and new random grid %>
<h1>New Game</h1>
<%# random_letters = (1..10).map { ('a'..'z').to_a.sample } %>
<ul class = "letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

      <br>
      <input class="form-control" type="text" name="word">
    <input type="submit" class="btn btn-primary h-100 align-self-end" value="Play!">

</form>
